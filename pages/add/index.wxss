.map-container {
  box-sizing: border-box;
  position: fixed;
  top: 100px;
  width: 100vw;
  height: 300px;
  /* top: 240px;
  height: 370px; */
}
.my-form-container {
  box-sizing: border-box;
  position: fixed;
  top: 400px;
  width: 100vw;
  padding: 5vw;
  /* height: 300px; */
  /* top: 240px;
  height: 370px; */
}

.my-form-label {
  box-sizing: border-box;
  font-size: 40rpx;
  font-weight: bold;
  color: black;
  padding: 0;
}
.my-form-input {
  box-sizing: border-box;
  width:90vw;
  color:grey;
  font-size: 32rpx;
  padding: 4px;
  border: 1px solid grey;
  border-radius: 8px;
  margin-top: 8px;
  margin-bottom: 8px;
}

map {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  z-index: 30;
}

.btn-submit {
  background-color: rgba(255, 204, 29, 1);
  border-radius: 8px;
