/* pages/add/index.wxss */


.map-container {
  box-sizing: border-box;
  position: fixed;
  top: 100px;
  width: 100vw;
  height: 300px;
}

.my-form-container {
  box-sizing: border-box;
  position: fixed;
  top: 400px;
  width: 100vw;
  height: calc(100vh - 100px - 300px - 70px);
  padding: 5vw;
  box-shadow: 0 -10rpx 20rpx rgba(0, 0, 0, 0.3);
}


map {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  z-index: 30;
}

.target {
  position:fixed;
  top: 225px;
  left: calc(50vw - 25px);
  width: 50px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.target image {
  margin-top: 9px;
  margin-right: 2px;
  width: 60rpx;
  height: 60rpx;
}

.locate {
  position:fixed;
  top: 120px;
  right: 20rpx;
  width: 40px;
  height: 40px;
  border: 4px solid black;
  background-color: rgba(255, 204, 29, 1);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.locate image {
  margin-top: 6px;
  margin-right: 1px;
  width: 30px;
  height: 30px;
}