/* pages/add/index.wxss */


.map-container {
  box-sizing: border-box;
  position: fixed;
  top: 100px;
  width: 100vw;
  height: 300px;
  /* top: 240px;
  height: 370px; */
}
.my-form-container {
  box-sizing: border-box;
  position: fixed;
  top: 400px;
  width: 100vw;
  padding: 5vw;
  /* height: 300px; */
  /* top: 240px;
  height: 370px; */
}

.my-form-label {
  box-sizing: border-box;
  font-size: 40rpx;
  font-weight: bold;
  color: black;
  padding: 0;
}
.my-form-input {
  box-sizing: border-box;
  width:90vw;
  color:grey;
  font-size: 32rpx;
  padding: 4px;
  border: 1px solid grey;
  border-radius: 8px;
  margin-top: 8px;
  margin-bottom: 8px;
}

map {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  z-index: 30;
}

.btn-submit {
  background-color: rgba(255, 204, 29, 1);
  border-radius: 8px;
  /* background-color: rgb(255, 170, 0); */
}

.target {
  position:fixed;
  top: 225px;
  left: calc(50vw - 25px);
  width: 50px;
  height: 50px;
  /* border: 4px solid black; */
  /* background-color: rgba(255, 204, 29, 1); */
  /* border-radius: 50%; */
  display: flex;
  justify-content: center;
  align-items: center;
}

.target image {
  margin-top: 9px;
  margin-right: 2px;
  width: 60rpx;
  height: 60rpx;
}

.locate {
  position:fixed;
  top: 120px;
  right: 20rpx;
  width: 50px;
  height: 50px;
  border: 4px solid black;
  background-color: rgba(255, 204, 29, 1);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.locate image {
  margin-top: 9px;
  margin-right: 2px;
  width: 60rpx;
  height: 60rpx;
}