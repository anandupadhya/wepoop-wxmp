<!--pages/toilets/index.wxml-->

<topnav />

<view class="map-container">
    <map
      id="myMap"
      scale="17"
      min-scale="15"
      max-scale="18"
      show-location="true"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{toilets}}"
      bindtap="mapTapHandler"
      bindmarkertap="markerTapHandler"
      bindregionchange="regionChangeHandler">
    </map>
</view>

  <view class="locate">
    <view class="f36 black bold" bindtap="moveToLocation">
      <image src="/images/location.svg"></image>
    </view>
  </view>


<view class="eta pa20 px50 text-center">
  <view class="f64 white bold">2 min</view>
  <view class="f32 white bold">223 meters</view>
  <view class="f32 white">{{toilets.length}} toilets nearby</view>
</view>

<block wx:if="{{toilets.length > 0}}">
  <view class="info pa20 px50 text-center">
    <view class="f32 white">Nearest Toilet</view>
    <view class="f48 white bold">{{currentToilet.description}}</view>
    <view class="f32 white">{{currentToilet.address}}</view>
  </view>
</block>
<block wx:else>
  <view class="info pa20 px50 text-center">
      <view class="f48 white bold">No toilets nearby...</view>
  </view>
</block>


<bottomnav currentPage="0" />

