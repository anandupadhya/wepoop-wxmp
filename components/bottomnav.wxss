/* components/bottomnav.wxss */
@import "../app.wxss";

.bottom-nav {
  margin-left: 5vw;
  width: 90vw;
  height: 50px;
  border-radius: 32rpx;
  background-color:white;
  position:fixed;
  bottom: 30px;
  z-index: 9;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 204, 29, 1);
  display: flex;
  justify-content: space-evenly;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.3);
}

image {
  width: 48rpx;
  height: 48rpx;
}